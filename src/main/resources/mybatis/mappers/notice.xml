<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.bookhub.board.mapper.NoticeMapper">


    <resultMap type="com.example.bookhub.board.vo.Notice" id="NoticeListResultMap">
        <id column="notice_no" property="no"/>
        <result column="notice_title" property="title"/>
        <result column="notice_content" property="content"/>
        <result column="notice_delete_yn" property="deleteYn"/>
        <result column="notice_priority" property="priority"/>
        <result column="notice_create_date" property="createDate"/>
        <result column="notice_update_date" property="updateDate"/>

    </resultMap>

    <select id="findAllNotice" resultMap="NoticeListResultMap">
        select notice_no, notice_title, notice_content
        from NOTICES
    </select>


</mapper>